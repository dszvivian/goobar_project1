<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".forecast.CurrentForecastFragment">


    <TextView
        android:id="@+id/tv_currentLocationName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        tools:text="Seattle"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tv_currentTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text = "72.23"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/tv_currentLocationName"
        app:layout_constraintTop_toBottomOf="@+id/tv_currentLocationName" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_locationEntry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_baseline_add_circle_24"
        tools:ignore="SpeakableTextPresentCheck"
        android:layout_marginRight="16dp" />



</androidx.constraintlayout.widget.ConstraintLayout>